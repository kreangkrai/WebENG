    <script type="text/javascript">

       
        let leaves = [];
        let last_leave_id = "";
        $(document).ready(async function () {
            await GetLeaveGroup();
        });

        //$(function () {
        //    $('[data-toggle="tooltip"]').tooltip();
        //});

        $('#addLeave').on('click', function () {
            $('#modal_leave').modal();
        });

        $('#btn_add_save').on('click', async function () {
            let leave_code = $('#add_type_leave_code').val();
            let leave_th = $('#add_type_leave_th').val();
            let leave_en = $('#add_type_leave_en').val();
            if (leave_code.trim() !== "" && leave_code !== null && leave_th.trim() !== "" && leave_th !== null && leave_en.trim() !== "" && leave_en !== null) {
                await $.ajax({
                type: "POST",
                url: '@Url.Action("CreateLeaveGroup", "LeaveSetting")',
                contentType: 'application/x-www-form-urlencoded',
                    data: { leave_code, leave_th, leave_en},
                success: function (response) {
                    let message = response;
                    if (message === "Success") {
                        location.reload();
                    }
                }
            });
            } else {
                alert("กรุณากรอกข้อมูลให้ครบถ้วน");
            }

        });

        async function UpdateSave() {
            if (last_leave_id !== "") {
                $('#modal_confirm').modal();
            } else {
                alert('กรุณาเลือกประเภทการลา');
            }
        }
        $('#confirm_ok').on('click', async function () {
            await ConfirmUpdateSave();
        });

        async function ConfirmUpdateSave() {
            $('#SpinModal').modal();
            let leave_type_id = last_leave_id;
            let leave_name_th = $('#update_type_leave_th').val();
            let leave_name_en = $('#update_type_leave_en').val();
            let leave_type_code = $('#update_type_leave_code').val();
            let description = $('#update_leave_description').val();
            let request_timing = $('#update_leave_request_timing').val();
            let gender_restriction = $('#update_leave_gender').val();
            let attachment_required = $('#update_leave_require_attachment').prop('checked');
            let attachment_threshold_days = $('#update_leave_attachment_threshold_days').val();
            let is_consecutive = $('#update_leave_consecutive').prop('checked');
            let max_consecutive_days = $('#update_leave_max_consecutive_days').val();
            let is_two_step_approve = $('#enable_two_steps_approve').prop('checked');
            let over_consecutive_days_for_two_step = $('#update_two_steps_approve_threshold_days').val();
            let is_unpaid = $('#update_leave_is_unpaid').prop('checked');
            let count_holidays_as_leave = $('#update_leave_count_holidays_as_leave').prop('checked');
            let updated_by = $('#update_leave_edit_by').text();
            let updated_at = $('#update_leave_edit_at').text();
            let is_active = $('#update_leave_is_active').prop('checked');
            let color_code = $('#update_leave_code_color').val();
            let calculate_auto = $('#update_leave_calculate_auto').prop('checked');
            let amount_entitlement = $('#update_amount_entitlement').val();
            let length_start_date = $('#update_length_start_date').val();
            if (leave_name_th.trim() !== "" &&
                leave_name_en.trim() !== "" &&
                leave_type_code.trim() !== "") {
                var leave = JSON.stringify({
                    "leave_type_id": leave_type_id,
                    "leave_name_th": leave_name_th,
                    "leave_name_en": leave_name_en,
                    "leave_type_code": leave_type_code,
                    "description": description,
                    "request_timing": request_timing,
                    "gender_restriction": gender_restriction,
                    "attachment_required": attachment_required,
                    "attachment_threshold_days": attachment_threshold_days,
                    "is_consecutive": is_consecutive,
                    "max_consecutive_days": max_consecutive_days,
                    "is_two_step_approve": is_two_step_approve,
                    "over_consecutive_days_for_two_step": over_consecutive_days_for_two_step,
                    "is_unpaid": is_unpaid,
                    "count_holidays_as_leave": count_holidays_as_leave,
                    "updated_by": updated_by,
                    "updated_at": updated_at,
                    "is_active": is_active,
                    "color_code": color_code,
                    "calculate_auto": calculate_auto,
                    "amount_entitlement": amount_entitlement,
                    "length_start_date": length_start_date
                });
                await $.ajax({
                    type: "PUT",
                    url: '@Url.Action("UpdateLeaveGroup", "LeaveSetting")',
                    contentType: 'application/x-www-form-urlencoded',
                    data: { leave },
                    success: function (response) {
                        let message = response;
                        if (message === "Success") {
                            location.reload();
                        }
                    }
                });
            } else {
                alert("กรุณากรอกข้อมูลให้ครบ");
            }
            $('#SpinModal').modal('hide');
        }
        async function GetLeaveGroup() {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetLeaveGroup", "LeaveSetting")',
                contentType: 'application/x-www-form-urlencoded',
                data: {},
                success: function (response) {
                    leaves = response.leaves;
                    GenerateLeaveGroup(leaves);
                }
            });
        }

        /* action เพิ่มประเภทการลา */
        function GenerateLeaveGroup(leaves) {
            var html = '';
            let annual = leaves.filter(f => f.leave_name_th.includes("ลาพักร้อน")).map(m => m)[0];
            if (annual !== undefined) {
                html += `<div class="form-group row">
                                       <button type="button" id="leave_group_${i}" class="btn btn-outline-primary form-control kanit-medium leave-group-btn"
                                       style="border-radius:7px; height:40px" onClick="LeaveGroupClicked('${annual.leave_type_id}', this)">
                                    ${annual.leave_name_th}
                               </button>
                         </div>`;
            }
            let sick = leaves.filter(f => f.leave_name_th.includes("ลาป่วย")).map(m => m)[0];
            if (sick !== undefined) {
                html += `<div class="form-group row">
                                       <button type="button" id="leave_group_${i}" class="btn btn-outline-primary form-control kanit-medium leave-group-btn"
                                       style="border-radius:7px; height:40px" onClick="LeaveGroupClicked('${sick.leave_type_id}', this)">
                                    ${sick.leave_name_th}
                               </button>
                         </div>`;
            }
           
            for (var i = 0; i < leaves.length; i++) {
                if (!leaves[i].leave_name_th.includes("ลาพักร้อน") && !leaves[i].leave_name_th.includes("ลาป่วย") && !leaves[i].leave_name_th.includes("ลาไม่รับค่าจ้าง")) {
                    html += `<div class="form-group row">
                                       <button type="button" id="leave_group_${i}" class="btn btn-outline-primary form-control kanit-medium leave-group-btn"
                                       style="border-radius:7px; height:40px" onClick="LeaveGroupClicked('${leaves[i].leave_type_id}', this)">
                                    ${leaves[i].leave_name_th}
                               </button>
                         </div>`;
                }
            }

            let unpaid = leaves.filter(f => f.leave_name_th.includes("ลาไม่รับค่าจ้าง")).map(m => m)[0];
            if (unpaid !== undefined) {
                html += `<div class="form-group row">
                                       <button type="button" id="leave_group_${i}" class="btn btn-outline-primary form-control kanit-medium leave-group-btn"
                                       style="border-radius:7px; height:40px" onClick="LeaveGroupClicked('${unpaid.leave_type_id}', this)">
                                    ${unpaid.leave_name_th}
                               </button>
                         </div>`;
            }

            $('#leave_group').empty();
            $('#leave_group').append(html);
        }

        function LeaveGroupClicked(leave_type_id, button) {

            // ลบ class active จากทุกปุ่มก่อน
            const buttons = document.querySelectorAll('.leave-group-btn');
            buttons.forEach(btn => btn.classList.remove('active'));

            // เพิ่ม class active ให้ปุ่มที่ถูกคลิก
            button.classList.add('active');

            last_leave_id = leave_type_id;

            let leave = leaves.filter(f => f.leave_type_id === leave_type_id).map(m => m)[0];
            $('#update_type_leave_th').val(leave.leave_name_th);
            $('#update_type_leave_en').val(leave.leave_name_en);
            $('#update_type_leave_code').val(leave.leave_type_code);
            $('#update_leave_description').val(leave.description);
            $('#update_leave_request_timing').val(leave.request_timing);
            $('#update_leave_gender').val(leave.gender_restriction);

             // Attachment Required
            leave.attachment_required === true ? $('#update_leave_require_attachment').attr('checked', true) : $('#update_leave_require_attachment').attr('checked', false);
            let chk = $('#update_leave_require_attachment').prop('checked');
            if (chk === true) {
                $('#div_leave_attachment_threshold_days').attr('hidden', false);
            } else {
                $('#div_leave_attachment_threshold_days').attr('hidden', true);

            }
            $('#update_leave_attachment_threshold_days').val(leave.attachment_threshold_days);

             // Consecutive
            leave.is_consecutive === true ? $('#update_leave_consecutive').attr('checked', true) : $('#update_leave_consecutive').attr('checked', false);
            let chk_consecutive = $('#update_leave_consecutive').prop('checked');
            if (chk_consecutive === true) {
                $('#div_leave_max_consecutive_days').attr('hidden', false);
            } else {
                $('#div_leave_max_consecutive_days').attr('hidden', true);
            }
            $('#update_leave_max_consecutive_days').val(leave.max_consecutive_days);

            // Two Step Approve
            leave.is_two_step_approve === true ? $('#enable_two_steps_approve').attr('checked', true) : $('#enable_two_steps_approve').attr('checked', false);
            if (leave.is_two_step_approve === true) {
                $('#div_two_steps_approve_threshold_days').attr('hidden', false);
            } else {
                $('#div_two_steps_approve_threshold_days').attr('hidden', true);
            }
            $('#update_two_steps_approve_threshold_days').val(leave.over_consecutive_days_for_two_step);

            //Leave Check Unpaid
            leave.is_unpaid === true ? $('#update_leave_is_unpaid').attr('checked', true) : $('#update_leave_is_unpaid').attr('checked', false);
            leave.count_holidays_as_leave === true ? $('#update_leave_count_holidays_as_leave').attr('checked', true) : $('#update_leave_count_holidays_as_leave').attr('checked', false);
            $('#update_leave_edit_by').text(leave.updated_by);
            $('#update_leave_edit_at').text(leave.updated_at.replace('T', ' '));

            leave.is_active === true ? $('#update_leave_is_active').attr('checked', true) : $('#update_leave_is_active').attr('checked', false);

            $('#update_leave_code_color').val(leave.color_code);
            leave.calculate_auto === true ? $('#update_leave_calculate_auto').attr('checked', true) : $('#update_leave_calculate_auto').attr('checked', false);
            if (leave.calculate_auto === true) {
                $('#div_calculate_auto').attr('hidden', true);
            } else {
                $('#div_calculate_auto').attr('hidden', false);
            }
            $('#update_amount_entitlement').val(leave.amount_entitlement);
            $('#update_length_start_date').val(leave.length_start_date);

        }

        $('#update_leave_require_attachment').on('change', function () {
            let chk = $('#update_leave_require_attachment').prop('checked');
            if (chk === true) {
                $('#div_leave_attachment_threshold_days').attr('hidden', false);
                $('#update_leave_attachment_threshold_days').val(3);
            } else {
                $('#div_leave_attachment_threshold_days').attr('hidden', true);
                $('#update_leave_attachment_threshold_days').val(0);
            }
        });

        $('#update_leave_consecutive').on('change', function () {
            let chk = $('#update_leave_consecutive').prop('checked');
            if (chk === true) {
                $('#div_leave_max_consecutive_days').attr('hidden', false);
                $('#update_leave_max_consecutive_days').val(3);
            } else {
                $('#div_leave_max_consecutive_days').attr('hidden', true);
                $('#update_leave_max_consecutive_days').val(0);
            }
        });

        $('#enable_two_steps_approve').on('change', function () {
            let chk = $('#enable_two_steps_approve').prop('checked');
            if (chk === true) {
                $('#div_two_steps_approve_threshold_days').attr('hidden', false);
                $('#update_two_steps_approve_threshold_days').val(3);
            } else {
                $('#div_two_steps_approve_threshold_days').attr('hidden', true);
                $('#update_two_steps_approve_threshold_days').val(0);
            }
        });

        $('#update_leave_calculate_auto').on('change', function () {
            let chk = $('#update_leave_calculate_auto').prop('checked');
            if (chk === true) {
                $('#div_calculate_auto').attr('hidden', true);
                $('#update_amount_entitlement').val(0);
