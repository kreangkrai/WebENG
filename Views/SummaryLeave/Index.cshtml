            const month_ = `${year}-${months}`;
            init(month_);
        });

        function generateDateHeaders(forceYearMonth = null) {
            const dateRow = $('#dateRow');
            if (dateRow.length === 0) {
                return;
            }

            const val = forceYearMonth || $('#monthPicker').val();
            if (!val || val === '') {
                return;
            }

            const [y, m] = val.split('-');
            const year = parseInt(y, 10);
            const monthIndex = parseInt(m, 10) - 1; // 0-11

            const daysInMonth = new Date(year, monthIndex + 1, 0).getDate();

            dateRow.empty();

            for (let day = 1; day <= daysInMonth; day++) {
                const date = new Date(year, monthIndex, day);
                const dayName = date.toLocaleDateString('th-TH', { weekday: 'short' });
                
                dateRow.append(`
            <th class="kanit-bold freeze-head" style="min-width:40px;">
                ${day}<br><small>${dayName}</small>
            </th>
        `);
            }
        }

        $('#prevMonth').on('click', function () {
            changeMonth(-1);
        });

        $('#nextMonth').on('click', function () {
            changeMonth(1);
        });

        $('#monthPicker').on('change', function () {
            const newVal = this.value;
            generateDateHeaders(newVal);
            init(newVal);
        });

        function changeMonth(direction) {
            const input = $('#monthPicker');
            let current = input.val();

            if (!current) {
                const today = new Date();
                current = `${today.getFullYear()}-${String(today.getMonth() + 1).padStart(2, '0')}`;
                input.val(current);
            }

            const [y, m] = current.split('-');
            let year = parseInt(y, 10);
            let month = parseInt(m, 10) + direction;

            if (month > 12) { month = 1; year++; }
            if (month < 1) { month = 12; year--; }

            const newVal = `${year}-${String(month).padStart(2, '0')}`;
            input.val(newVal);

            init(newVal);
            setTimeout(() => {
                generateDateHeaders(newVal);
            }, 100);
        }

        async function GetDataLeave() {
            let now = new Date();
