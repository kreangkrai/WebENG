            let start = `${year}-${monthIndex + 1}-01`;
            let end = `${year}-${monthIndex + 1}-${total_day}`;

            selectMonth = true;
            init(start, end);
            
        });

        function isSameMonthAndYear(date1, date2) {
            const d1 = new Date(date1);
            const d2 = new Date(date2);

            return d1.getFullYear() === d2.getFullYear() &&
                d1.getMonth() === d2.getMonth();
        }

        function generateDateHeaders(start, end) {
            const dateRow = $('#dateRow');
