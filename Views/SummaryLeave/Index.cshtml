        async function GetDepartments() {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetDapartments", "SummaryLeave")',
                contentType: 'application/x-www-form-urlencoded',
                data: {},
                success: function (response) {
                    departments = response.departments;
                    GenerateDepartments(departments);
                }
            });
        }
        function GenerateDepartments(departments) {
            let select = $('#select_department');
            select.empty();
            for (let i = 0; i < departments.length; i++) {
                if (i === 0) {
                    select.append(`<option value="${departments[i]}" selected>${departments[i]}</option>`);
                } else {
                    select.append(`<option value="${departments[i]}">${departments[i]}</option>`);
                }
            }
        }

        function getISOWeek(date) {
            const d = new Date(date);
            d.setHours(0, 0, 0, 0);
            d.setDate(d.getDate() + 4 - (d.getDay() || 7));
            const yearStart = new Date(d.getFullYear(), 0, 1);
            const weekNo = Math.ceil((((d - yearStart) / 86400000) + 1) / 7);
            return [d.getFullYear(), weekNo];
        }

        function weekToDateRange(weekStr) {
            const [year, week] = weekStr.split('-W').map(Number);
            const jan4 = new Date(year, 0, 4);
            const start = new Date(jan4);
            start.setDate(jan4.getDate() - ((jan4.getDay() + 6) % 7) + (week - 1) * 7 + 1);

            const end = new Date(start);
            end.setDate(start.getDate() + 6);

            const fmt = d => d.toISOString().slice(0, 10);

            return {
                start: fmt(start),
                end: fmt(end)
            };
        }
        
        $('#select_department').on('change', function () {
            if (selectMonth) {
                const input = $('#monthPicker');
                let current = input.val();

                const today = new Date();
                if (!current) {

                    current = `${today.getFullYear()}-${String(today.getMonth() + 1).padStart(2, '0')}`;
                    input.val(current);
                }

                const [y, m] = current.split('-');
                let year = parseInt(y, 10);
                let month = parseInt(m, 10);

                if (month > 12) { month = 1; year++; }
                if (month < 1) { month = 12; year--; }

                const total_day = new Date(year, month, 0).getDate();
                let start = `${year}-${month}-01`;
                let end = `${year}-${month}-${total_day}`;

                init(start, end);

            } else {
                let week = $('#week').val();
                const range = weekToDateRange(week);
                let start = range.start;
                let end = range.end;

                init(start, end);
            }
        });

        $('#week').on('change', function () {
            let week = $('#week').val();
            const range = weekToDateRange(week);
            let start = range.start;
            let end = range.end;

            selectMonth = false;
            init(start, end);
            
        });

