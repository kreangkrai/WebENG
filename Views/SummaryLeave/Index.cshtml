            const startDate = new Date(start);
            const endDate = new Date(end);

            let currentDate = new Date(startDate);
            while (currentDate <= endDate) {
                const dayNumber = currentDate.getDate();
                const dayName = currentDate.toLocaleDateString('th-TH', { weekday: 'short' });

                dateRow.append(`
            <th class="kanit-bold freeze-head text-center" style="min-width:40px; width:40px;">
                ${dayNumber}<br><small class="text-muted">${dayName}</small>
            </th>
        `);

                currentDate.setDate(currentDate.getDate() + 1);
            }
        }

        $('#prevMonth').on('click', function () {
            changeMonth(-1);
        });

        $('#nextMonth').on('click', function () {
            changeMonth(1);
        });

        $('#monthPicker').on('change', function () {
            const newVal = this.value;

            const [y, m] = newVal.split('-');
            const year = parseInt(y, 10);
            const monthIndex = parseInt(m, 10) - 1;

            const total_day = new Date(year, monthIndex + 1, 0).getDate();

            let start = `${year}-${monthIndex + 1}-01`;
            let end = `${year}-${monthIndex + 1}-${total_day}`;

            selectMonth = true;
            init(start, end);
            
        });

        function changeMonth(direction) {
            const input = $('#monthPicker');
            let current = input.val();

            const today = new Date();
            if (!current) {
                
                current = `${today.getFullYear()}-${String(today.getMonth() + 1).padStart(2, '0')}`;
                input.val(current);
            }

            const [y, m] = current.split('-');
            let year = parseInt(y, 10);
            let month = parseInt(m, 10) + direction;

            if (month > 12) { month = 1; year++; }
            if (month < 1) { month = 12; year--; }

            const newVal = `${year}-${String(month).padStart(2, '0')}`;

            const total_day = new Date(year, month, 0).getDate();

            
            let start = `${year}-${month}-01`;
            let end = `${year}-${month}-${total_day}`;
            input.val(newVal);

            selectMonth = true;
            init(start, end);
           
        }

        async function GetDataLeave() {
            let now = new Date();
            let date = now.toISOString().split('T')[0];
            await $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetDataLeave", "SummaryLeave")',
                    contentType: 'application/x-www-form-urlencoded',
                    data: { date },
                    success: function (response) {
                        let requests = response;
                        GenerateSummaryLeave(requests);

                    }
                });
        }
        function GenerateSummaryLeave(requests) {
            let amount_emp = requests.reduce((accumulator, currentValue) => accumulator + currentValue.amount_emp, 0);
            var html = `<div class="col-xl-2 col-md-2 col-sm-6">
                <div class="card kanit-regular" style="align-items: center; padding:10px; background-color:#2178BE;">
                    <h1 class="card-title" style="font-size:28px; color:white;"> ${amount_emp} คน </h1>
                    <h5 class="card-title" style="color:white;">
                        ลาทั้งหมด
                    </h5>
                </div>
            </div>`;
            for (var i = 0; i < requests.length; i++) {
                html += `<div class="col-xl-2 col-md-2 col-sm-6">
                <div class="card kanit-regular" style="align-items: center; padding:10px">
                    <h1 class="card-title text-${requests[i].color_code}" style="font-size:28px;"> ${requests[i].amount_emp} คน </h1>
                    <h5 class="card-title">
                        <i class="fas fa-circle mr-2 text-${requests[i].color_code}" style="font-size:10px;"></i>
                        ${requests[i].leave_name_th}
                    </h5>
                </div>
            </div>`;
            }

            $('#div_summary_leave').empty();
            $('#div_summary_leave').append(html);
        }

        function init(start, end) {
            if (table !== undefined) {
                table.destroy();
                $('#table_leave tbody').empty();
            }

            let today = new Date();
            if (selectMonth) {
                if (today >= new Date(start) && today <= new Date(end)) {
                    index_today = today.getDate();
                } else {
                    index_today = -1;
                }
            } else {
                if (today >= new Date(start) && today <= new Date(end)) {
                    index_today = Math.floor((new Date(end) - new Date(start)) / (1000 * 60 * 60 * 24)) - 1;
                }
                else {
                    index_today = -1;
                }
            }

            generateDateHeaders(start, end);

            let startDate = new Date(start);
            let endDate = new Date(end);

            let day_of_month = Math.floor((endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
            
            let department = $('#select_department').val();
            table = $('#table_leave').DataTable({
                ajax: {
                    type: "GET",
                    url: '@Url.Action("GetDataByMonth", "SummaryLeave")',
                    contentType: 'application/x-www-form-urlencoded',
                    data: { department, start, end },
                    dataSrc: '',
                },
                columns: Array(day_of_month + 1).fill({ data: null, defaultContent: "" }),
                columnDefs: (() => {
                    const defs = [];
                    for (let i = 0; i <= day_of_month; i++) {

                        const request_status = [
                            { status_en: "Pending", status_th: "รออนุมัติ" },
                            { status_en: "Resubmit", status_th: "ส่งใหม่" },
                            { status_en: "Cancelled", status_th: "ยกเลิก" },
                            { status_en: "Approved", status_th: "อนุมัติ" },
                            { status_en: "Rejected", status_th: "ไม่อนุมัติ" },
                            { status_en: "Returned", status_th: "ตีกลับ" },
                            { status_en: "Success", status_th: "สำเร็จ" },
                        ];
                        const colors = [{ "code": "color-brown", "color": "#6D4C41" },
                        { "code": "color-sky", "color": "#4FC3F7" },
                        { "code": "color-yellow", "color": "#FFD54F" },
                        { "code": "color-green", "color": "#43A047" },
                        { "code": "color-blue", "color": "#1976D2" },
                        { "code": "color-red", "color": "#E53935" },
                        { "code": "color-pink", "color": "#F06292" },
                        { "code": "color-bluegrey ", "color": "#90A4AE" },
                        { "code": "color-orange ", "color": "#FF8A65" },
                        { "code": "color-purple ", "color": "#8E24AA" },
                        ];
                        const duration_classes = [{ "duration": "half-left", "class": "half-left" },
                        { "duration": "half-right", "class": "half-right" },
                        { "duration": "quarter-top-left", "class": "quarter-top-left" },
                        { "duration": "quarter-bottom-left", "class": "quarter-bottom-left" },
                        { "duration": "quarter-top-right", "class": "quarter-top-right" },
                        { "duration": "quarter-bottom-right", "class": "quarter-bottom-right" },
                        { "duration": "three-quarter-left", "class": "three-quarter-left" }
                        ];

                        if (i == 0) {
                            defs.push({
                                targets: i,
                                render: function (data, type, row) {
                                    var imgSrc = '/img/AdminLTELogo.png';
                                    if (row.img) {
                                        imgSrc = 'data:image/jpeg;base64,' + row.img;
                                    }
                                    return `
                                           <div class="row align-items-center" style="width:300px">
                                             <div class="col-2 d-flex justify-content-center">
                                                    <img src="${imgSrc}"
                                                        class="rounded-circle me-2"
                                                        style="width: 32px; height: 32px; object-fit: cover;"
                                                        alt="${row.name}" />
                                             </div>
                                                <div class="col-10 d-flex justify-content-start">
                                                    <div style="color:#444">
                                                        <span class="kanit-regular d-block text-start fw-bold d-flex justify-content-start">${row.name}</span>
                                                        <span class="kanit-light d-block text-start text-muted small d-flex justify-content-start">${row.position}</span>
                                                    </div>
                                                </div>
                                           </div>`;
                                }
                            });
                        }
                        else {
                            defs.push({
                                targets: i,
                                render: function (data, type, row) {
                                    if (row.leaves[i - 1] !== null) {
                                        let leave = row.leaves[i - 1];
                                        if (!leave) {
                                            return '';
                                        }
                                        const duration = leave.duration;
                                        let color = colors.filter(f => f.code === leave.color_code).map(m => m.color);
                                        let status = request_status.filter(f => f.status_en === leave.status).map(m => m.status_th);
                                        let value = "";
                                        if (status !== "Successed") {
                                            value = "✸";
                                        }
                                        if (duration !== "full") {
                                            let classes = duration_classes.filter(f => f.duration === duration).map(m => m.class);
                                            return `
                                            <div class="tooltip-wrapper">
                                                <input type="button"
                                                   class="kanit-bold btn ${classes}"
                                                   style="width:34px;height:34px;border-radius:17px; background-color:${color};font-size:18px;font-weight:600;padding:3px;color:white" value="${value}"/>

                                                <!-- Tooltip แบบกำหนดเอง -->
                                                <div class="custom-tooltip kanit-light" style="background-color:darkslategrey">
                                                    <h5 style="font-size:18px; text-align:center">${leave.type} (${status})</h5>
                                                    <span style="font-size:16px; text-align:center">${leave.time}</span>
                                                </div>
                                            </div>
                                        `;
                                        } else {
                                            return `
                                            <div class="tooltip-wrapper">
                                                <input type="button"
                                                   class="kanit-bold btn btn-danger}"
                                                   style="width:34px;height:34px;border-radius:17px; background-color:${color};font-size:18px;font-weight:600;padding:3px;color:white" value="${value}"/>

                                                <!-- Tooltip แบบกำหนดเอง -->
                                                <div class="custom-tooltip kanit-light" style="background-color:darkslategrey">
                                                    <h5 style="font-size:18px; text-align:center">${leave.type} (${status})</h5>
                                                    <span style="font-size:16px; text-align:center">${leave.time}</span>
                                                </div>
                                            </div>
                                        `;
                                        }
                                    }
                                }
                            });
                        }
                    }
                    return defs;
                })(),

                rowCallback: function (row, data, index) {
                    if (is_this_month) {
                        $('td', row).each(function (colIndex) {
                            if (colIndex === index_today) {
                                $('td:eq(' + index_today + ')', row).addClass('leave-info');
                            }
                        });
                    }
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/th.json'
                },
                "bStateSave": false,
                "retrieve": true,
                "info": false,
                "paging": false,
                "searching": false,
                "ordering": false,
                fixedColumns: {
                    left: 1
                },
                scrollX: false,
                scrollCollapse: true,
                fixedHeader: true,
                destroy: true,
            });
        }

    </script>

