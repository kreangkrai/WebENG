@section Scripts
{
    <script type="text/javascript">

        let table_time;
        let leaves_type;
        $(document).ready(async function () {
            leaves_type = await GetLeaveType();
            generateLeaveTypeHeaders(leaves_type);
            const departments = await GetDepartments();
            GenerateDepartments(departments);
            GenerateYears();
            GetTimeAttendance();
        });

        async function GetLeaveType() {
            let leaves = [];
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetLeaveType", "TimeAttendance")',
                contentType: 'application/x-www-form-urlencoded',
                data: {  },
                success: function (response) {
                    leaves = response;
                }
            });
            return leaves;
        }

        function generateLeaveTypeHeaders(leaves_type) {
            const LeaveTypeRow = $('#LeaveTypeRow');
            LeaveTypeRow.empty();

            LeaveTypeRow.append(`<th class="freeze-left-1" style="width:70px;"> ลำดับ</th>
                                 <th class="freeze-left-2" style="width:100px;">รหัสพนักงาน</th>
                                 <th class="freeze-left-3" style="width:180px;">ชื่อ-สกุล</th>
                                 <th class="freeze-left-4" style="width:70px;">แผนก</th>
                                 <th class="freeze-left-5" style="width:100px;">สิทธิการลาพักร้อน</th>
                                 <th class="freeze-left-6" style="width:100px;">พักร้อนคงเหลือ</th>
                                 <th class="freeze-left-7" style="width:100px;">รวมวันลาทั้งหมด</th>`);
            for (let i = 0; i < leaves_type.length; i++) {
                LeaveTypeRow.append(`<th style="width:100px;">${leaves_type[i].leave_name_th}</th>`);
            }
            LeaveTypeRow.append(`<th style="width:100px;">สาย (ครั้ง)</th>`);
            LeaveTypeRow.append(`<th style="width:100px;">สาย (นาที)</th>`);
            LeaveTypeRow.append(`<th style="width:100px;">ลืมสแกนหน้า (ครั้ง)</th>`);
        }
        async function GetDepartments() {
            let departments = [];
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetDapartments", "TimeAttendance")',
                contentType: 'application/x-www-form-urlencoded',
                data: {},
                success: function (response) {
                    departments = response;
                }
            });
            return departments;
        }

        function GenerateDepartments(departments) {
            let select = $('#select_department');
            select.empty();
            select.append(`<option value="ALL" selected>ทุกแผนก</option>`);
            for (let i = 0; i < departments.length; i++) {
                if (i === 0) {
                    select.append(`<option value="${departments[i]}">${departments[i]}</option>`);
                } else {
                    select.append(`<option value="${departments[i]}">${departments[i]}</option>`);
                }
            }
        }

        function GenerateYears() {
            let select = $('#select_year');
            select.empty();
            let year = new Date().getFullYear();
            for (let i = year; i >= year - 5; i--) {
                select.append(`<option value="${i}">${i}</option>`);
            }
        }

        async function GetTimeAttendance() {
            $('#SpinModal').modal();
            const department = $('#select_department').val();
            const year = $('#select_year').val();

            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetTimeAttendance", "TimeAttendance")',
	            contentType: 'application/x-www-form-urlencoded',
                data: {
                    department,year
                },
                success: function (response) {
                    const data = response.timeAttendances;
                    const late_times = response.calLatetimes;
                    renderTimeAttendance(data, late_times);
                }
            });
            $('#SpinModal').modal('hide');
        }
        function ExportTimeAttendance() {
            const department = $('#select_department').val();
            const year = $('#select_year').val();
            location.href = '@Url.Action("ExportTimeAttendance", "TimeAttendance")?department=' + department + '&year=' + year;
        }

        $('#select_department').on('change', async function () {
            await GetTimeAttendance();
        });
        $('#select_year').on('change', async function () {
            await GetTimeAttendance();
        });

        
        function renderTimeAttendance(data, late_times) {
            if (table_time) {
                table_time.destroy();
            }
            console.log(late_times);
            let datas = [];
            for (let i = 0; i < data.length; i++) {
                let used_al = 0;
                let sum_all_leave = 0;
                let sum_by_leave = Array(leaves_type.length).fill(0);
                if (data[i].leaves.length > 0) {
                    const code_al = data[i].leaves.filter(f => f.leave_name_th === "ลาพักร้อน").map(m => m)[0];
                    if (code_al !== undefined) {
                        used_al = code_al.monthlyAccumulated.reduce((accumulator, currentValue) => {
                            return accumulator + parseFloat(currentValue.monthlyAmount);
                        },0);
                    }

                    for (let j = 0; j < data[i].leaves.length; j++) {
                        sum_all_leave += data[i].leaves[j].monthlyAccumulated.reduce((acc, current) => {
                            return acc + current.monthlyAmount;
                        }, 0);
                    }

                    
                    for (let k = 0; k < leaves_type.length; k++) {
                        let leave_type = data[i].leaves.filter(f => f.leave_type_code === leaves_type[k].leave_type_code).map(m => m)[0];
                        
                        if (leave_type !== undefined) {
                            const used_leave = leave_type.monthlyAccumulated.reduce((accumulator, currentValue) => {
                                return accumulator + parseFloat(currentValue.monthlyAmount);
                            }, 0);
                            sum_by_leave[k] = used_leave;
                        }
                    }
                }
                
                const balance_al = parseFloat(data[i].entitlement_al) - parseFloat(used_al);
                const late_time = late_times.filter(f => f.emp_id === data[i].emp_id).map(m => m)[0];
                const count_late = late_time.totalCountLate;
                const minute_late = late_time.totalMinuteLate;
                const count_forgot_scan = late_time.totalCountForgotScan;
                datas.push([(i + 1),
                data[i].emp_id,
                data[i].name_th,
                data[i].department,
                data[i].entitlement_al,
                    balance_al,
                    sum_all_leave,
                ...sum_by_leave,
                    count_late,
                    minute_late,
                    count_forgot_scan]);
            }
            table_time = $('#table_time').DataTable({
                destroy: true,
                data: datas,
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/2.1.8/i18n/th.json'
                },
                pageLength: 20,
                scrollX: true,
                fixedHeader: true,
                fixedColumns: {
                    left: 4
                },
                columnDefs: [
                    {
                        className: 'dt-body-left',
                        targets: [2]
                    },
                    {
                        className: 'dt-head-center',
                        targets: [2]
                    },
                ],
                order: [[3, 'asc']],
                info: false,
                searching: false,
                paging: false,
                ordering:true,
                rowCallback: function (row, data, index) {
                    for (let col = 4; col < data.length; col++) {
                        if (col === 5) {
                            $(`td:eq(${col})`, row).css("color", "red");
                            $(`td:eq(${col})`, row).css("font-weight", "600");
                        }
                        if (data[col] === 0) {
                            $(`td:eq(${col})`, row).text("-");
                            $(`td:eq(${col})`, row).css("color", "red");
                            $(`td:eq(${col})`, row).css("font-size", "26px");
                        }
                    }
                },
                
            });
        };
    </script>
}