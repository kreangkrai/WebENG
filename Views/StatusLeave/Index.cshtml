                { id: "EM010002", name: "นางสาว P PC" },
                { id: "EM010004", name: "นาย W WW" }
                // เพิ่มตามจริง
            ];

            const $search = $('#employeeSearch');
            const $select = $('#employeeSelect');
            const $results = $('#searchResults');

            // สร้าง option ทั้งหมด
            employees.forEach(emp => {
                const opt = `<option value="${emp.id}">${emp.id} : ${emp.name}</option>`;
                $select.append(opt);
            });

            // ฟังก์ชันกรอง
            function filterEmployees(query) {
                query = query.trim().toLowerCase();
                if (!query) {
                    $results.hide().empty();
                    return;
                }

                const filtered = employees.filter(emp =>
                    emp.id.toLowerCase().includes(query) ||
                    emp.name.toLowerCase().includes(query)
                );

                $results.empty();
                if (filtered.length === 0) {
                    $results.append('<div class="list-group-item text-muted text-center">ไม่พบข้อมูล</div>').show();
                    return;
                }

                filtered.forEach((emp, idx) => {
                    const item = $(`
                                <div class="list-group-item" data-id="${emp.id}">
                                    <strong>${emp.id}</strong> : ${emp.name}
                                </div>
                            `);
                    if (idx === 0) item.addClass('active');
                    $results.append(item);
                });
                $results.show();
            }

            // พิมพ์ค้นหา
            let timeout;
            $search.on('input', function () {
                clearTimeout(timeout);
                timeout = setTimeout(() => filterEmployees($(this).val()), 200);
            });

            // คลิกผลลัพธ์
            $results.on('click', '.list-group-item', function () {
                if ($(this).hasClass('text-muted')) return;
                const id = $(this).data('id');
                $select.val(id).trigger('change');
                $search.val($select.find('option:selected').text());
                $results.hide();
            });

            // กด Enter
            $search.on('keydown', function (e) {
                if (e.key === 'Enter') {
                    const $active = $results.find('.active');
                    if ($active.length) $active.click();
                } else if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    let $next = $results.find('.active').removeClass('active').next('.list-group-item');
                    if (!$next.length) $next = $results.find('.list-group-item').first();
                    $next.addClass('active');
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    let $prev = $results.find('.active').removeClass('active').prev('.list-group-item');
                    if (!$prev.length) $prev = $results.find('.list-group-item').last();
                    $prev.addClass('active');
                }
            });

            // เริ่มต้น
            $search.val('-- เลือกพนักงาน --');
            $results.hide();
        });
    </script>
