            const $search = $('#employeeSearch');
            const $clearBtn = $('#clearSearch');
            const $select = $('#employeeSelect');
            const $results = $('#searchResults');
            const $info = $('#employeeInfo');
            const $noEmp = $('#noEmployee');

            // --- แสดงปุ่ม X เมื่อพิมพ์ ---
            $search.on('input', function () {
                $clearBtn.toggle($(this).val().length > 0);
            });

            // --- กดปุ่ม X → เคลียร์ทุกอย่าง ---
            $clearBtn.on('click', function () {
                $search.val('').trigger('input'); // เคลียร์ + ซ่อนปุ่ม
                $select.val('All').trigger('change'); // ตั้ง Dropdown เป็น "ทุกคน"
                $results.hide().empty();
                $info.hide();
                $noEmp.show();
            });

            // --- เริ่มต้น: ซ่อนปุ่ม ---
            $clearBtn.hide();
            // --- สร้าง Option ใน Dropdown ---
            employees.forEach(emp => {
                $select.append(`<option value="${emp.id}">${emp.id} : ${emp.name}</option>`);
            });

            // --- ฟังก์ชันกรอง ---
            function filterEmployees(query) {
                query = query.trim().toLowerCase();
                if (!query) { $results.hide().empty(); return; }

                const filtered = employees.filter(emp =>
                    emp.id.toLowerCase().includes(query) || emp.name.toLowerCase().includes(query)
                );

                $results.empty();
                if (!filtered.length) {
                    $results.append('<div class="list-group-item text-muted text-center">ไม่พบข้อมูล</div>').show();
                    return;
                }

                filtered.forEach((emp, idx) => {
                    const item = $(`<div class="list-group-item kanit-light" data-id="${emp.id}">
                        <strong>${emp.id}</strong> : ${emp.name}
                    </div>`);
                    if (idx === 0) item.addClass('active');
                    $results.append(item);
                });
                $results.show();
            }

            // --- พิมพ์ค้นหา ---
            let timeout;
            $search.on('input', function () {
                clearTimeout(timeout);
                timeout = setTimeout(() => filterEmployees($(this).val()), 200);
            });

            // --- คลิกผลลัพธ์ → ซิงค์ทั้ง 2 ที่ ---
            $results.on('click', '.list-group-item', function () {
                if ($(this).hasClass('text-muted')) return;
                const id = $(this).data('id');
                const text = $(this).text().trim();

                $select.val(id).trigger('change');   // อัปเดต Dropdown
                $search.val(text);                   // อัปเดตช่องค้นหา
                $results.hide();
            });

            // --- กด Enter ในช่องค้นหา ---
            $search.on('keydown', function (e) {
                if (e.key === 'Enter') {
                    const $active = $results.find('.active');
                    if ($active.length) $active.click();
                } else if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    let $next = $results.find('.active').removeClass('active').next('.list-group-item');
                    if (!$next.length) $next = $results.find('.list-group-item').first();
                    $next.addClass('active');
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    let $prev = $results.find('.active').removeClass('active').prev('.list-group-item');
                    if (!$prev.length) $prev = $results.find('.list-group-item').last();
                    $prev.addClass('active');
                }
            });

            // --- เมื่อเปลี่ยน Dropdown → อัปเดตช่องค้นหา ---
            $('#employeeSelect').on('change', function () {
                const empId = $(this).val();

                if (empId === 'All') {
                    $('#employeeSearch').val('');           // เคลียร์ช่องค้นหา
                    $('#searchResults').hide();
                    $('#employeeInfo').hide();              // ซ่อนข้อมูล
                    $('#noEmployee').show();                // แสดงข้อความเริ่มต้น
                } else {
                    const selectedText = $(this).find('option:selected').text();
                    $('#employeeSearch').val(selectedText);
                    $('#searchResults').hide();

                    const emp = employees.find(e => e.id === empId);
                    if (emp) {
                        $('#EmpName').text(emp.name);
                        $('#EmpId').text(emp.id);
                        $('#department').text(emp.department);
                        $('#position').text(emp.position);
                        $('#phone').text(emp.phone);
                        $('#startDate').text(emp.startDate);
                        $('#probationEnd').text(emp.probationEnd);
                        $('#employeeInfo').show();
                        $('#noEmployee').hide();
                    }
                }
            });

            // เริ่มต้น
            $info.hide(); $noEmp.show();
            $results.hide();
        });
