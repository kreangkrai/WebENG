         google.charts.setOnLoadCallback(GenerateChartTaskRatio);
        google.charts.setOnLoadCallback(GenerateChartManpowerRatio);
        google.charts.setOnLoadCallback(GenerateChartManpowerOTRatio);
        let processes = [];
