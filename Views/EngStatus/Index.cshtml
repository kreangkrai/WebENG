@{ 
    ViewData["title"] = "Status";
}
<div class="row p-4" style="row-gap:20px">
    <div  class="col-xl-12">
        <div class="card card-dark">
            <div class="card-header">
                <span class="card-title">Status</span>
                <div class="card-tools">
                    <button id="btn_add" class="btn btn-tool bg-primary">
                        <i class="fas fa-plus"></i> New Status
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="table" class="table table-sm table-hover table-bordered text-center w-100">
                    <thead>
                        <tr>
                            <th>Status ID</th>
                            <th>Status Name</th>
                            <th>Status Description</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_status" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal_title">Create Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <span>Status ID</span>
                        <input id="status_id" type="text" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <span>Status Name</span>
                        <input id="status_name" type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <span>Status Description</span>
                        <input id="status_description" type="text" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="btn_accept" type="button" class="btn btn-primary">Accept</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        let statuses = [];
        let last_id = 0;
        let table;
        let update = false;

        $(document).ready(async function () {
            await GetStatuses();
            GenerateTable();
        });

        async function GetStatuses() {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetStatuses", "EngStatus")',
	            contentType: 'application/x-www-form-urlencoded',
                data: { },
                success: function (response) {
                    statuses = response;
                }
            });
        }

        async function GetLastStatusID() {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetLastStatusID", "EngStatus")',
	            contentType: 'application/x-www-form-urlencoded',
                data: { },
                success: function (response) {
                    last_id = response;
                }
            });
        }

        function GenerateTable() {
            let datas = [];

            for (let i = 0; i < statuses.length; i++) {
                datas.push([
                    statuses[i].status_id,
                    statuses[i].status_name,
                    statuses[i].status_description
                ]);
            }

            if (table !== undefined) {
                table.destroy();
            }

            table = $('#table').DataTable({
                data: datas,
            });
        }

        $('#btn_add').on('click', async function () {
            update = false;
            await GetLastStatusID();
            last_id += 1;
            $('#modal_title').text("Create Status");
            $('#status_id').val("STA" + last_id.toString().padStart(3, '0'));
            $('#status_name').val(null);
            $('#status_description').val(null);
            $('#modal_status').modal();
        });

        $('#table tbody').on('click', 'tr', function () {
            update = true;
            let data = table.row(this).data();
            let status_id = data[0];
            let status_name = data[1];
            let status_description = data[2];
            $('#modal_title').text("Edit Status");
            $('#status_id').val(status_id);
            $('#status_name').val(status_name);
            $('#status_description').val(status_description);
            $('#modal_status').modal();
        });

        $('#btn_accept').on('click', async function () {
            let status_str = JSON.stringify({
                "status_id": $('#status_id').val(),
                "status_name": $('#status_name').val(),
                "status_description": $('#status_description').val()
            });
            if (update === false) {
                await CreateStatus(status_str);
            } else {
                await EditStatus(status_str);
            }
        });

        async function CreateStatus(status_str) {
            await $.ajax({
                type: "POST",
                url: '@Url.Action("CreateStatus", "EngStatus")',
	            contentType: 'application/x-www-form-urlencoded',
                data: { status_str },
                success: function (response) {
                    if (response === "Success") {
                        window.location.reload();
                    } else {
                        alert(response);
                        console.log(response);
                    }
                }
            });
        }

        async function EditStatus(status_str) {
            await $.ajax({
                type: "PATCH",
                url: '@Url.Action("EditStatus", "EngStatus")',
	            contentType: 'application/x-www-form-urlencoded',
                data: { status_str },
                success: function (response) {
                    if (response === "Success") {
                        window.location.reload();
                    } else {
                        alert(response);
                        console.log(response);
                    }
                }
            });
        }

    </script>
}
