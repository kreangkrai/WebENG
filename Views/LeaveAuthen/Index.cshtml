                const response = await $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetDataChecker", "LeaveAuthen")',
                    data: {}
                });

                approver_checker = [];
                let entitlement_checker = 0;

                response.checkers.forEach(item => {
                    approver_checker.push({
                        id: entitlement_checker++,
                        checker_id: item.checker_id,
