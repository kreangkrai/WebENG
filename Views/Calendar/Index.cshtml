        async function GetWorkingHoursByDate(user_name ,working_date) {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetWorkingHoursByDate", "Calendar")',
	            contentType: 'application/x-www-form-urlencoded',
                data: {
